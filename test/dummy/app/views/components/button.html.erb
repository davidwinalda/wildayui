<h1>Wilday UI Button Component</h1>

<%= w_button "Primary Button", variant: :primary %>
<%= w_button "Secondary Button", variant: :secondary %>
<%= w_button "Disabled Button", variant: :outline, disabled: true %>
<%= w_button "Rounded Button", variant: :primary, radius: :rounded %>
<%= w_button "Pill Button", variant: :primary, radius: :pill %>
<%= w_button "Square Button", variant: :primary, radius: :square %>

<br><br>

<%= w_button "Icon Button", variant: :primary, icon: "fa-solid fa-user" %>
<%= w_button "Icon Button Right", variant: :primary, icon: "fa-solid fa-user", icon_position: :right %>
<%= w_button "Icon Button Left", variant: :primary, icon: "fa-solid fa-user", icon_position: :left %>
