<h1>Wilday UI Button Component</h1>

<%= w_button "Primary Button", variant: :primary %>
<%= w_button "Secondary Button", variant: :secondary %>
<%= w_button "Disabled Button", variant: :outline, disabled: true %>
<%= w_button "Rounded Button", variant: :primary, radius: :rounded %>
<%= w_button "Pill Button", variant: :primary, radius: :pill %>
<%= w_button "Square Button", variant: :primary, radius: :square %>

<br><br>

<%= w_button "Icon Button", variant: :primary, icon: "fa-solid fa-user" %>
<%= w_button "Icon Button Right", variant: :primary, icon: "fa-solid fa-user", icon_position: :right %>
<%= w_button "Icon Button Left", variant: :primary, icon: "fa-solid fa-user", icon_position: :left %>

<br><br>

<%= w_button "Loading Button", variant: :primary, loading: true, loading_text: "Loading...", use_default_controller: false %>
<%= w_button "Submit", variant: :primary, id: "custom-dev-button", loading_text: "Saving..." %>

<%= w_button "Submit", loading_text: "Saving...", use_default_controller: false %>

<br><br>

<%= w_button "Go to Google", variant: :primary, href: "https://www.google.com", target: "_blank" %>

<%= w_button "Process", 
    variant: :primary,
    href: "https://skilvul.com/",
    loading_text: "Processing..." %>

<br><br>


<!-- Basic Dropdown -->
<%= w_button "Dropdown", 
    variant: :primary,
    dropdown: true,
    dropdown_items: [
      { text: "Profile", href: "#profile" },
      { text: "Settings", href: "#settings" },
      { divider: true },
      { text: "Logout", href: "#logout" }
    ] 
%>

<%= w_button "Menu", 
    variant: :primary,
    dropdown: { position: :bottom, align: :start, trigger: :hover },
    dropdown_items: [
        { text: "Option 1", href: "#1" },
        { 
            text: "Option 2 (With Submenu)", 
            children: [
                { text: "Sub Option 1", href: "#2-1" },
                { text: "Sub Option 2", href: "#2-2" },
                { 
                    text: "Sub Option 3 (With Submenu)", 
                    children: [
                        { text: "Sub Sub Option 1", href: "#2-3-1" },
                        { text: "Sub Sub Option 2", href: "#2-3-2" },
                        { text: "Sub Sub Option 3 (With Submenu)", children: [
                            { text: "Sub Sub Sub Option 1", href: "#2-3-3-1" },
                            { text: "Sub Sub Sub Option 2", href: "#2-3-3-2" },
                        ] }
                    ] 
                }
            ]
        },
        { text: "Option 3", href: "#3" }
    ] 
%>


<!-- Custom Dropdown Position -->
<%= w_button "Top Dropdown", 
    variant: :outline,
    dropdown: {
      position: :bottom,
      align: :start
    },
    dropdown_items: [
      { text: "Option 1 dsdsdsd dsdsdsds", href: "#1" },
      { text: "Option 2 dsdsdsdsdsdsdsdsdsdsd", href: "#2" },
      { text: "Option 3", href: "#3" }
    ] 
%>

<!-- Hover Trigger Dropdown -->
<%= w_button "Hover Me", 
    variant: :primary,
    dropdown: {
      trigger: :hover,
      position: :bottom,
      align: :start
    },
    dropdown_items: [
      { text: "Action 1", href: "#1" },
      { text: "Action 2", href: "#2" }
    ] 
%>

<!-- Right-aligned Dropdown -->
<%= w_button "More Options", 
    variant: :secondary,
    dropdown: {
      position: :bottom,
      align: :start
    },
    dropdown_items: [
      { text: "View Details", href: "#view" },
      { text: "Edit Item", href: "#edit" },
      { divider: true },
      { text: "Remove", href: "#remove" }
    ] 
%>

<!-- Small Dropdown -->
<%= w_button "Small Dropdown", 
    variant: :primary,
    size: :small,
    dropdown: true,
    dropdown_items: [
      { text: "Small Option 1", href: "#1" },
      { text: "Small Option 2", href: "#2" }
    ] 
%>

<!-- Large Dropdown with Icons -->
<%= w_button "Large Menu", 
    variant: :primary,
    size: :large,
    icon: "fa-solid fa-bars",
    dropdown: true,
    dropdown_items: [
      { text: "Dashboard", href: "#dashboard" },
      { text: "Reports", href: "#reports" },
      { divider: true },
      { text: "Help", href: "#help" }
    ] 
%>

<script>
document.addEventListener('DOMContentLoaded', () => {
  const button = document.getElementById('custom-dev-button');
  
  if (button) {
    button.addEventListener('click', () => {
      // Wait for the same duration as the loading state (2000ms)
      setTimeout(() => {
        alert('Process completed!');
      }, 2000);
    });
  }
});
</script>